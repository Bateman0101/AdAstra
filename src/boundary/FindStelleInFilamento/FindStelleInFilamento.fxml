<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.FindStelleInFilamento.FindStelleInFilamentoBoundary">
   <children>
      <Label layoutX="20.0" layoutY="20.0" text="Trova le stelle all'interno di un Filamento">
         <font>
            <Font name="System Bold Italic" size="17.0" />
         </font>
      </Label>
      <TextField fx:id="idEntry" layoutX="20.0" layoutY="60.0" prefHeight="26.0" prefWidth="111.0" promptText="Inserisci ID" />
      <TextField fx:id="satelliteEntry" layoutX="193.0" layoutY="60.0" promptText="Inserisci Satellite" />
      <Button layoutX="402.0" layoutY="112.0" mnemonicParsing="false" onAction="#onSubmitPressed" text="Submit" />
      <Label layoutX="27.0" layoutY="138.0" text="Stelle interne al Filamento:" />
      <TableView fx:id="table" layoutX="-1.0" layoutY="179.0" prefHeight="220.0" prefWidth="591.0">
        <columns>
            <TableColumn fx:id="idS" prefWidth="68.0" text="ID" />
            <TableColumn fx:id="nomeS" prefWidth="92.0" text="nome" />
            <TableColumn fx:id="tipoS" prefWidth="106.0" text="tipo" />
            <TableColumn fx:id="flussoS" prefWidth="99.0" text="flusso" />
            <TableColumn fx:id="latS" prefWidth="96.0" text="latitudine" />
            <TableColumn fx:id="lonS" prefWidth="126.0" text="longitudine" />
        </columns>
      </TableView>
      <Button onAction="#getHomePage" layoutX="511.0" layoutY="28.0" mnemonicParsing="false" text="Home" />
   </children>
</AnchorPane>
